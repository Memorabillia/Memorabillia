<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Memorabilia" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightRed</item>
        <item name="colorPrimaryVariant">@color/darkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/lightGray</item>
        <item name="colorSecondaryVariant">@color/darkColor</item>
        <item name="colorOnSecondary">@color/lightRed</item>
        <item name="android:statusBarColor">@color/darkColor</item>
        <item name="android:textColorPrimary">@color/black</item>

        <item name="android:fontFamily">@font/poppinssemibold</item>
        <item name="fontFamily">@font/poppinssemibold</item>


    </style>

    <style name="CustomMaterialButton1" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/lightRed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">16dp</item>
        <item name="fontFamily">@font/poppinssemibold</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">@color/darkColor</item>
    </style>

    <style name="CustomMaterialButton2" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/darkColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">16dp</item>
        <item name="fontFamily">@font/poppinssemibold</item>
