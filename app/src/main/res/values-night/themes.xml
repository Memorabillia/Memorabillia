<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Memorabilia.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/Purple</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/darkColor</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/darkColor</item>
        <item name="android:statusBarColor">@color/darkColor</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="MyTextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyBottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/LightGrey</item>
    </style>
    <style name="CustomMaterialButton1" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/lightRed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">16dp</item>
        <item name="fontFamily">@font/poppinssemibold</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">@color/LightGrey</item>
    </style>

    <style name="CustomMaterialButton2" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/LightGrey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">16dp</item>
        <item name="fontFamily">@font/poppinssemibold</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">@color/lightRed</item>
    </style>


</resources>