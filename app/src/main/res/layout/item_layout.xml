<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corners_item"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginTop="32dp"
    >
    <FrameLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
      >
        <ImageView
            android:id="@+id/Image_unknown"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_broken_image_24" />

        <ImageView
            android:id="@+id/bookImageView"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"
            android:transitionName="bookImageTransition"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="11dp"
        android:layout_height="103dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="@color/title_color"
            android:text="@string/title_rv"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/authorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsitalic"
            android:text="@string/author_rv"
            android:textColor="@color/author_color"
            android:textSize="12sp" />
        


    </LinearLayout>

</LinearLayout>