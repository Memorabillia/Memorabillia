<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".theme.SwitchThemeActivity">

    <TextView
        android:id="@+id/overview_title1"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:paddingBottom="4dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:text="@string/Appearence"
        android:textColor="@color/lightRed"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="480dp"
        gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="180dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/Dark_mode"
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/dark_welcome_page"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/Light_mode"
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/light_welcome_page"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/dark_text"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="313dp"
                android:text="@string/Dark_mode_text"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/light_text"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="313dp"
                android:text="@string/Light_mode_text"
                android:textColor="@color/lightRed"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_theme"
            android:layout_width="214dp"
            android:layout_height="59dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="379dp"
            android:layout_marginStart="65dp"
            android:text="@string/dark_theme"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="224dp" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>