<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookdetail.BookDetailActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/manageBookButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookImageView"
                android:layout_width="250dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:contentDescription="book_image"
                android:scaleType="centerCrop"
                android:transitionName="bookImageTransition"/>

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnBackground"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <View
                android:id="@+id/BookImageViewTitleline"
                android:layout_width="400dp"
                android:layout_height="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:background="@color/lightRed" />

            <TextView
                android:id="@+id/authorTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:text="@string/authorTitle"
                android:textColor="?attr/colorOnBackground"
                android:textSize="20sp" />

            <View
                android:id="@+id/authorTitleline"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:background="@color/lightRed" />

            <TextView
                android:id="@+id/authorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:textColor="?attr/colorOnBackground"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/publisherTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:textColor="?attr/colorOnBackground"
                android:text="@string/publisherTitle"
                android:textSize="20sp" />

            <View
                android:id="@+id/publisherTitleline"
                android:layout_width="110dp"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:background="@color/lightRed" />

            <TextView
                android:id="@+id/publisherTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:textColor="?attr/colorOnBackground"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/isbnTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:text="@string/isbnTitle"
                android:textColor="?attr/colorOnBackground"
                android:textSize="20sp" />

            <View
                android:id="@+id/isbnTitleline"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:background="@color/lightRed" />

            <TextView
                android:id="@+id/isbnTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:textColor="?attr/colorOnBackground"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/yearTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:text="@string/yearTitle"
                android:textColor="?attr/colorOnBackground"
                android:textSize="20sp" />

            <View
                android:id="@+id/yearTitleline"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:background="@color/lightRed" />

            <TextView
                android:id="@+id/yearTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:textColor="?attr/colorOnBackground"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/manageBookButton"
        style="@style/CustomMaterialButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
