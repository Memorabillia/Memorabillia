<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="32dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_item"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/Image_unknown"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/baseline_broken_image_24" />

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="120dp"
                android:layout_height="118dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />

        </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_rv"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/authorTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsitalic"
                android:text="@string/author_rv"
                android:textColor="@color/author_color"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_corners_item"
            android:contentDescription="@string/deleteButton"
            android:scaleType="fitXY"
            android:src="@drawable/delete_logoo" />
    </LinearLayout>

<com.google.android.material.button.MaterialButton
android:id="@+id/moveButton"
android:layout_marginStart="8dp"
style="@style/CustomMaterialButton3"
android:layout_width="325dp"
android:layout_height="70dp"
app:cornerRadius="16dp"
app:icon="@drawable/baseline_auto_stories_24"
app:iconGravity="textEnd"
android:text="@string/Start_Reading"
android:textSize="16sp" />

    </LinearLayout>