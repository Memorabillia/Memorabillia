<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corners_item"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginTop="32dp"
    >

    <FrameLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
       >
        <ImageView
            android:id="@+id/Image_unknown"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_broken_image_24" />

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="118dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />

    </FrameLayout>
    <LinearLayout
        android:layout_width="11dp"
        android:layout_height="103dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/title_rv"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/authorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsthin"
            android:text="@string/author_rv"
            android:textColor="@color/author_color"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/checkMarkImageView"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:src="@drawable/checkmark" />

            <TextView
                android:id="@+id/finishedTextView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@id/checkMarkImageView"
                android:text="Finished!"
                android:textColor="@android:color/holo_green_light"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>